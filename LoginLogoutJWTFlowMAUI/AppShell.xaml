<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoginLogoutJWTFlowMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LoginLogoutJWTFlowMAUI"
    xmlns:pages="clr-namespace:LoginLogoutJWTFlowMAUI.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

    <TabBar>
        <ShellContent
        Title="Applcation Details"
        ContentTemplate="{DataTemplate pages:ApplicationDetailsPage}"
        Route="ApplicationDetailsPage" />

        <ShellContent
        Title="Users"
        ContentTemplate="{DataTemplate pages:UsersPage}"
        Route="UsersPage" />
    </TabBar>

</Shell>
